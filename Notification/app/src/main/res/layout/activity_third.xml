<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_create_notification"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/create_notification"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_list_notification"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/list_notifications"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_clear_notification"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/clear"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="Listener"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>